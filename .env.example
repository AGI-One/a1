# ERPNext Configuration Environment Variables
# Copy this file to .env and update the values according to your setup

# Database Configuration
DB_HOST=mariadb
DB_TYPE=mariadb
MARIADB_DATABASE=erpnext
MARIADB_USER=erpnext
MARIADB_PASSWORD=erpnext_mariadb_password
MARIADB_ROOT_PASSWORD=erpnext_mariadb_root_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=erpnext_redis_password

# Redis Ports (optional - will use defaults if not set)
REDIS_PORT=6379
REDIS_CACHE_PORT=13000
REDIS_QUEUE_PORT=11000
REDIS_SOCKETIO_PORT=13000
MAINTENANCE_MODE=0

# Script Options
SHOW_CONFIG=false          # Set to true to display config after update
RESTART_SERVICES=false     # Set to true to restart services after update